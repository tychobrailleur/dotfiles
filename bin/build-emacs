#!/usr/bin/env bash


EMACS_DIR=~/dev/emacs

cd $EMACS_DIR

if [[ "$OSTYPE" == "darwin"* ]]; then
BUILD_FLAGS="--with-cairo \
                --with-modules \
                --without-compress-install \
                --with-x-toolkit=no \
                --with-gnutls \
                --with-mailutils \
                --with-native-compilation \
                --with-harfbuzz \
                --with-imagemagick \
                --with-jpeg \
                --with-png \
                --with-rsvg \
                --with-tiff \
                --with-wide-int \
                --with-xft \
                --with-xml2 \
                --with-xpm \
                --with-modules \
                --with-threads \
                --with-native-image-api \
                --with-pdumper \
                --program-transform-name='s/^ctags$/ctags.emacs/' \
                CFLAGS=\"-O3\" prefix=/usr/local"
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
BUILD_FLAGS="--with-cairo \
                --with-modules \
                --without-compress-install \
                --with-x-toolkit=no \
                --with-gnutls \
                --with-mailutils \
                --with-tree-sitter \
                --with-native-compilation \
                --with-harfbuzz \
                --with-imagemagick \
                --with-jpeg \
                --with-png \
                --with-rsvg \
                --with-tiff \
                --with-wide-int \
                --with-xft \
                --with-xml2 \
                --with-xpm \
                --with-modules \
                --with-threads \
                --with-native-image-api \
                --with-pdumper \
                --with-x-toolkit=gtk2 \
                --program-transform-name='s/^ctags$/ctags.emacs/' \
                CC=gcc-10 CFLAGS=\"-O3\" prefix=/usr/local"
fi

./autogen.sh
./configure $BUILD_FLAGS
make -j6 NATIVE_FULL_AOT=1
sudo make install

if [[ "$OSTYPE" == "darwin"* ]]; then
    sudo codesign --force --deep --sign - nextstep/Emacs.app
    cp -R nextstep/Emacs.app /Applications
fi
